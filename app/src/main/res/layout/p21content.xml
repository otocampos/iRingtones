<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/p2"
    android:orientation="vertical"
    tools:context="com.gpaddy.ringtones.iphone.P2">

    <LinearLayout
        android:id="@+id/image_actionbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include
            layout="@layout/p27actionbar" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_ads_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        tools:context=".MainActivity"
        android:background="#ed1f1f1f">

        <android.support.v4.view.PagerTabStrip
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="#4f0068"
            android:id="@+id/tab_strip"
            android:focusableInTouchMode="false">

        </android.support.v4.view.PagerTabStrip>

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/assistive_touch_promotion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:clickable="true"
        android:background="@drawable/assistive_selector"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
             >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:id="@+id/iconwallpaper"
                        android:background="@drawable/ic_wallpaper"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="More Ringtones &amp; Wallpapers, Try Now !"
                    android:gravity="left|center_vertical"
                    android:textSize="16sp"
                    android:textColor="#2979ff"/>
                <RelativeLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
